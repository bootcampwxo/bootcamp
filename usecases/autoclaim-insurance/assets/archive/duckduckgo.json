{
    "openapi": "3.0.0",
    "info": {
      "title": "DuckDuckGo Search API",
      "version": "1.0.0",
      "description": "API para realizar pesquisas na web usando o DuckDuckGo para consultas relacionadas a seguros de automóveis."
    },
    "servers": [
      {
        "url": "https://insurance-app.1xw6uzli3p9g.us-south.codeengine.appdomain.cloud"
      }
    ],
    "paths": {
      "/duckduckgo_search": {
        "get": {
          "summary": "Pesquisar informações sobre seguro automóvel",
          "description": "Executa uma pesquisa DuckDuckGo usando a string de consulta fornecida.",
          "parameters": [
            {
              "name": "query",
              "in": "query",
              "required": true,
              "schema": {
                "type": "string"
              },
              "description": "A consulta de pesquisa (por exemplo, leis para seguro de automóveis em Nova York)"
            }
          ],
          "responses": {
            "200": {
              "description": "Resultado de pesquisa bem-sucedido",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "results": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "title": { "type": "string" },
                            "link": { "type": "string" },
                            "snippet": { "type": "string" }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
  