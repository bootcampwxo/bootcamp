{
  "openapi": "3.0.3",
  "info": {
    "title": "Auto Insurance Claim API",
    "version": "1.0.3",
    "description": "API for managing auto insurance claims: fetching, updating, and listing top claims."
  },
  "servers": [
    {
      "url": "https://insurance-app.1xw6uzli3p9g.us-south.codeengine.appdomain.cloud",
      "description": "Production server"
    }
  ],
  "paths": {
    "/fetch_open_claims": {
      "get": {
        "summary": "Obter sinistros abertos",
        "description": "Recupera sinistros abertos para um cliente específico usando o ID do cliente e o número da reivindicação.",
        "operationId": "fetchOpenClaims",
        "parameters": [
          {
            "name": "customer_id",
            "in": "query",
            "required": true,
            "description": "ID exclusivo do cliente",
            "schema": {
              "type": "integer",
              "example": 60695904
            }
          },
          {
            "name": "claim_number",
            "in": "query",
            "description": "Número de sinistro exclusivo",
            "schema": {
              "type": "string",
              "example": "CLM347697"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Detalhes da reivindicação encontrados",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "claim_number": {
                      "type": "string",
                      "example": "CLM347697"
                    },
                    "customer_id": {
                      "type": "integer",
                      "example": 60695904
                    },
                    "status": {
                      "type": "string",
                      "example": "Open"
                    },
                    "estimated_cost": {
                      "type": "number",
                      "example": 4500
                    },
                    "claim_request_details": {
                      "type": "string",
                      "example": "Danos no para-choque traseiro e na lanterna traseira"
                    },
                    "vehicle_type": {
                      "type": "string",
                      "example": "Carro"
                    },
                    "vehicle_details": {
                      "type": "string",
                      "example": "Toyota Corolla"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/update_claim_status": {
      "post": {
        "summary": "Atualizar status do sinistro",
        "description": "Atualiza o status de uma reivindicação usando o número da reivindicação e o novo status como parâmetros de consulta.",
        "operationId": "updateClaimStatus",
        "parameters": [
          {
            "name": "claim_status",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "enum": ["Open", "In Progress", "Closed", "Rejected"]
            },
            "description": "O novo status da reivindicação."
          },
          {
            "name": "claim_number",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Identificador exclusivo para a reivindicação."
          }
        ],
        "responses": {
          "200": {
            "description": "Status do sinsitro atualizado com sucesso.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    },
                    "claim_number": {
                      "type": "string"
                    },
                    "new_status": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Parâmetros de entrada inválidos."
          },
          "500": {
            "description": "Internal server error."
          }
        }
      }
    },
    "/top_5_open_claims": {
      "get": {
        "summary": "Obtenha os 5 principais sinistros em aberto",
        "description": "Recupera as 5 principais reivindicações de seguro abertas.",
        "operationId": "getTop5OpenClaims",
        "responses": {
          "200": {
            "description": "Lista das 5 principais reivindicações em aberto",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "open_claims": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          },
          "default": {
            "description": "Unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
